<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/action_sheet_title_margin_left"
        android:layout_marginStart="@dimen/action_sheet_title_margin_left"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:minHeight="@dimen/action_sheet_min_height_for_item"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/device_list_item_title_font_size" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_sheet_max_height"
        android:divider="@null"/>
</LinearLayout>