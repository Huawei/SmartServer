<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/healthy_event_item_view"
    style="@style/MultipleLineListItem"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <!-- Title -->
        <TextView
            android:id="@+id/port_number"
            style="@style/MultipleLineListItem_Subject"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/hardware_network_port_label_port_number" />

        <TextView
            android:id="@+id/link_status"
            style="@style/MultipleLineListItem_SubjectTips"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>


    <LinearLayout style="@style/MultipleLineListItem_Item"
        android:layout_width="match_parent">

        <TextView
            style="@style/MultipleLineListItem_ItemLabel"
            android:text="@string/hardware_network_port_label_mac_addr" />

        <TextView
            android:id="@+id/address"
            style="@style/MultipleLineListItem_ItemContent"
            android:text="@string/label_value_txt" />

    </LinearLayout>

    <LinearLayout style="@style/MultipleLineListItem_Item"
        android:layout_width="match_parent">

        <TextView
            style="@style/MultipleLineListItem_ItemLabel"
            android:text="@string/hardware_network_port_label_port_type" />

        <TextView
            android:id="@+id/port_type"
            style="@style/MultipleLineListItem_ItemContent"
            android:text="@string/label_value_txt" />

    </LinearLayout>


</LinearLayout>