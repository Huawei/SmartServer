<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/btnTopLeft"
            android:layout_width="@dimen/header_btn_width"
            android:layout_height="@dimen/header_btn_height"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/header_btn_padding"
            android:gravity="center_vertical|left"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_icon_size"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btnTopRight"
            android:layout_width="@dimen/header_btn_width"
            android:layout_height="@dimen/header_btn_height"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/header_btn_padding"
            android:gravity="center_vertical|right"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_icon_size"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_toEndOf="@id/btnTopLeft"
            android:layout_toStartOf="@id/btnTopRight"
            android:layout_marginTop="@dimen/header_title_margin_top_bottom"
            android:layout_marginBottom="@dimen/header_title_margin_top_bottom">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="layout text"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_large" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="layout text"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/font_size_medium"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

</merge>