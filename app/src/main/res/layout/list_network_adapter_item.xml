<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout  style="@style/DisplayListItem">
        <TextView
            android:id="@+id/name"
            style="@style/DisplayListItem_Label"
            android:layout_centerVertical="true"
            android:text="@string/hardware_network_adapter_list" />
        <TextView
            android:id="@+id/status"
            style="@style/Label_value"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="@string/label_value_txt" />
    </RelativeLayout>

    <com.huawei.smart.server.widget.LabeledTextView
        android:id="@+id/manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:label="@string/hardware_network_adapter_label_manufacturer" />

    <com.huawei.smart.server.widget.LabeledTextView
        android:id="@+id/model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        app:label="@string/hardware_network_adapter_label_model" />

    <com.huawei.smart.server.widget.LabeledTextView
        android:id="@+id/chip_manufacturer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="@string/hardware_network_adapter_label_chip_manufacturer"
         />

    <com.huawei.smart.server.widget.LabeledTextView
        android:id="@+id/chip_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="@string/hardware_network_adapter_label_chip_model"
        />

    <com.huawei.smart.server.widget.LabeledTextView
        android:id="@+id/position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="@string/hardware_network_adapter_label_position"
        />

    <com.huawei.smart.server.widget.LabeledTextView
        android:id="@+id/network_adapter_ports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableEnd="@mipmap/ic_detail"
        app:label="@string/hardware_network_adapter_label_ports"
        app:value=" "
        app:with_divider="false"
        />

</LinearLayout>