<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <include layout="@layout/widget_title_bar" />

    <TextView
        style="@style/FormSection"
        android:background="@color/colorContentBackground"
        android:text="@string/profile_select_theme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/form_list_item_padding_left"
        android:paddingTop="20dp">


        <FrameLayout
            android:id="@+id/theme_dark"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/theme_dark">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_checked"
                android:visibility="gone"/>
        </FrameLayout>

        <Space
            android:layout_width="16dp"
            android:layout_height="64dp" />

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:id="@+id/theme_green"
            android:background="@drawable/theme_green" >
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_checked"
                android:visibility="gone"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>